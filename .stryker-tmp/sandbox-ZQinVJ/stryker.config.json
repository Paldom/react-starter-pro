{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "htmlReporter": {
    "fileName": "reports/mutation/html/index.html"
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.stories.ts",
    "!src/**/*.stories.tsx",
    "!src/**/*.d.ts",
    "!src/stories/**",
    "!src/test/**",
    "!src/i18n/**",
    "!src/main.tsx",
    "!src/vite-env.d.ts",
    "!src/mocks/**",
    "!src/shared/api/generated/**",
    "!src/app/router/**"
  ]
}
